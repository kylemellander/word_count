<div class="row ko-form">
  <form action="/find">
    <div class="form-group">
      <label for="phrase">Enter the phrase you want to search.</label>
      <textarea id="phrase" name="phrase" class="form-control ko-form-phrase" placeholder="The phrase you want to search" rows="4"></textarea>
    </div>
    <div class="form-group">
      <label for="word">Find what word?</label>
      <input id="word" name="word" class="form-control ko-form-word" placeholder="Search" type="text">
    </div>
    <div class="form-group">
      <button class="btn btn-primary">Find</button>
    </div>
  </form>
</div>
