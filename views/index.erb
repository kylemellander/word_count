<div class="row ko-form">
  <form action="/find">
    <div class="form-group required<% if @phrase_error >= 1 %> error<% end %>">
      <label for="phrase">Enter the phrase you want to search.</label>
      <textarea id="phrase" name="phrase" class="form-control ko-form-phrase" placeholder="The phrase you want to search" rows="4"><% if @phrase_error == 0 %><%= @phrase %><% end %></textarea>
    </div>
    <div class="form-group required<% if @word_error >= 1 %> error<% end %>">
      <label for="word">Find what word?</label>
      <input id="word" name="word" class="form-control ko-form-word" placeholder="Search" type="text"<% if @word_error != 1 %>value="<%= @word %>"<% end %>>
      <% if @word_error == 2 %><span class="ko-error-message">You cannot use punctuation or special characters in your word (you can use apostrophes('))</span><% end %>
    </div>
    <div class="form-group">
      <button class="btn btn-primary">Find</button>
    </div>
  </form>
</div>
